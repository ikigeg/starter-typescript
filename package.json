    "name": "Michael Griffiths",
    "email": "michael@ildesigns.co.uk"
  },
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.2.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.5",
    "@types/node": "^11.9.4",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  }
}
