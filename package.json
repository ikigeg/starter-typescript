{
  "name": "starter-typescript",
  "version": "0.0.2",
  "description": "Simple starter typescript project",
  "main": "src",
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --pretty --project tsconfig.json",
    "watch": "npm run build -- --watch",
    "start": "npm run build && node dist",
    "dev": "ts-node src",
    "dev:watch": "nodemon -w src -x \"npm run ts-node\"",
    "tsc": "tsc"
  },
  "keywords": [],
